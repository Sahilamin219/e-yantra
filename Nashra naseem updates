#include "CB_Task_1_Sandbox.h"


/*
*
* Function Name: forward_wls
* Input: node
* Output: void
* Logic: Uses white line sensors to go forward by the number of nodes specified
* Example Call: forward_wls(2); //Goes forward by two nodes
*
*/
void forward_wls(unsigned char node)
{
	int l, m, r;
	l = ADC_Conversion(1);
	m = ADC_Conversion(2);
	r = ADC_Conversion(3);
	while (1)
	{
		int l, m, r;
		l = ADC_Conversion(1);
		m = ADC_Conversion(2);
		r = ADC_Conversion(3);
		printf("%d %d %d \n", l, m, r);
		{
			if (m != 0 && l== 0 && r == 0)
			{
				forward();
			}
			else if (l != 0 && m == 0 && r == 0)
			{
			     velocity(100,255);
			}
			else if (l == 0 && m == 0 && r != 0)
			{
				 velocity(255,100);
			}
			else if (l != 0 && m != 0 && r == 0)
			{
			   velocity(100,255);
			}
			else if (l == 0 && m != 0 && r != 0)
			{
			velocity(255,100);
			}
		else if (l != 0 && m != 0 && r != 0)
			{
				forward();
				_delay_ms(375);
				break;


			}
			else
			{
				

			}
		}
	}


}
