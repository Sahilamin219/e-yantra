*
* Function Name: Task_1_1
* Input: voidnt a, b, c;
	a = ADC_Conversion(1);
	b = ADC_Conversion(2);
	c = ADC_Conversion(3);
	while (1)
	{
		if (a == 0 && b != 0 && c == 0)
		{
			//std::cout << "Forward";
			forward();
		}
		else
		{
			back();
		}
* Output: void
* Logic: Use this function to encapsulate your Task 1.1 logic
* Example Call: Task_1_1();
*/
void Task_1_1(void)
{

	forward_wls(1);
	right();
	_delay_ms(475);
	forward_wls(1);
	forward_wls(1);
	forward_wls(1);
	forward_wls(1);
	velocity(100,255);
	_delay_ms(475);
	forward_wls(1);



}

